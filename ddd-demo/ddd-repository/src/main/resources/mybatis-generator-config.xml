<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "https://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="paymentContext" targetRuntime="MyBatis3Simple">
        <property name="javaFileEncoding" value="UTF-8"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/payments"
                        userId="payments"
                        password="payments"/>

        <javaModelGenerator targetPackage="com.example.payments.infrastructure.persistence.mybatis.generated"
                            targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper.generated"
                         targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER"
                              targetPackage="com.example.payments.infrastructure.persistence.mybatis.generated"
                              targetProject="src/main/java"/>

        <table tableName="payment" domainObjectName="PaymentRecord"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false"/>
    </context>
</generatorConfiguration>

